{
  "version": 2,
  "builds": [
    {
      "src": "adapter-lover/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "outputDirectory": "adapter-lover/build",
  "installCommand": "cd adapter-lover && npm ci",
  "buildCommand": "cd adapter-lover && npm run build",
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}